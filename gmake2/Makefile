# Alternative GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  Glad_config = debug
  ImGui_config = debug
  GLFW_config = debug
  MatrixRain_config = debug

else ifeq ($(config),release)
  Glad_config = release
  ImGui_config = release
  GLFW_config = release
  MatrixRain_config = release

else ifeq ($(config),win64screensaver)
  Glad_config = win64screensaver
  ImGui_config = win64screensaver
  GLFW_config = win64screensaver
  MatrixRain_config = win64screensaver

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := Glad ImGui GLFW MatrixRain

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

Glad:
ifneq (,$(Glad_config))
	@echo "==== Building Glad ($(Glad_config)) ===="
	@${MAKE} --no-print-directory -C . -f Glad.make config=$(Glad_config)
endif

ImGui:
ifneq (,$(ImGui_config))
	@echo "==== Building ImGui ($(ImGui_config)) ===="
	@${MAKE} --no-print-directory -C . -f ImGui.make config=$(ImGui_config)
endif

GLFW:
ifneq (,$(GLFW_config))
	@echo "==== Building GLFW ($(GLFW_config)) ===="
	@${MAKE} --no-print-directory -C . -f GLFW.make config=$(GLFW_config)
endif

MatrixRain: Glad GLFW ImGui
ifneq (,$(MatrixRain_config))
	@echo "==== Building MatrixRain ($(MatrixRain_config)) ===="
	@${MAKE} --no-print-directory -C . -f MatrixRain.make config=$(MatrixRain_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f Glad.make clean
	@${MAKE} --no-print-directory -C . -f ImGui.make clean
	@${MAKE} --no-print-directory -C . -f GLFW.make clean
	@${MAKE} --no-print-directory -C . -f MatrixRain.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo "  win64screensaver"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   Glad"
	@echo "   ImGui"
	@echo "   GLFW"
	@echo "   MatrixRain"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"